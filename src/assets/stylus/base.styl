
main{
  flex: 1 0 auto;
}
.main-body{
	padding:20px;
	margin-top:20px;
	.el-input__inner,
	textarea{
		max-width:740px;
		&:hover,
		&:focus{
			border-color:#86c543;
		}
	}
	textarea{
		font-size:inherit;
		font-family:'roboto', sans-serif;
		padding-left:10px;
		margin-bottom:15px;
	}
	.buttons_under_main_body .clear {
		background-color: rgb(86, 86, 86);
		border: none;
	}
	.buttons_under_main_body button {
		font-size: 1.3rem;
		font-weight: 600;
		height: 54px;
		width: 170px;
		border: #fff 2px solid;
		color: #fff;
		background: none;
		&.dark{
			background-color: #565656;
			border: none;
		}
		}

}

.content
  align-items: center
  display: flex
  height: 100vh
  justify-content: center
  border:0px

.content-inner
  display: block

  form{
    .el-button--primary{
        width: 100%
    }
  }

.pageTitle{
        color:text-light-color;
        text-shadow:0px 1px 2px #3e3e3e;
        font-family:light-font;
        font-weight: normal;
        text-transform: uppercase;
        margin-top:0px;
    }

footer{
	color: #fff;
	display: block;
	padding: 15px 0 15px 80px;
	font-size:12px;
	.footer-content{
		font-size:12px;
		color:#555;
		background:transparent;
		img{
		    width: 50px;
		}
	}
	.logo{
		padding-right:0px;
		padding-bottom:8px;
		display:block;
	}

}